{
  "name": "small-rna-mad-qc",
  "title": "Mean Absolute Deviation - small-RNA-seq (v1.0.4)",
  "summary": "mad-qc",
  "dxapi": "1.0.0",
  "version": "1.0.4",
  "categories": [
    "ENCODE"
  ],
  "inputSpec": [
    {
      "name": "quants_a",
      "label": "STAR quantification file from one rep",
      "class": "file",
      "patterns": ["*_srna_star_quant.tsv"],
      "optional": false
    },
    {
      "name": "quants_b",
      "label": "STAR quantification file from another rep",
      "class": "file",
      "patterns": ["*_srna_star_quant.tsv"],
      "optional": false
    },
    {
      "name": "annotations",
      "label": "transcript and other annotations (GTF)",
      "class": "file",
      "optional": false,
      "patterns": ["*.gtf.gz"]
    }
  ],
  "outputSpec": [
    {
      "name": "mad_plot",
      "label": "Plot of mean absolute deviation of log ratios",
      "class": "file",
      "patterns": [ "*_mad_plot.png" ]
    },
    {
      "name": "metadata",
      "label": "JSON stringifyed QC metrics of the form {key: value}",
      "class": "string"
    }
  ],
  "runSpec": {
    "distribution": "Ubuntu",
    "release": "12.04",
    "interpreter": "python2.7",
    "file": "src/small-rna-mad-qc.py",
    "execDepends": [
      {"name": "r-base-core"},
      {"name": "ghostscript"},
      { "name": "gawk" }
    ]
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "authorizedUsers": []
}
