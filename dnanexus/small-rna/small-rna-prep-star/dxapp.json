{
  "name": "small-rna-prep-star",
  "title": "STAR genome indexing - small-RNA-seq (v2.1.1)",
  "summary": "Prepare reference genome index for STAR used in the ENCODE small-rna-seq pipeline",
  "dxapi": "1.0.0",
  "version": "2.1.1",
  "authorizedUsers": [],
  "inputSpec": [
    {
      "class": "file",
      "optional": false,
      "name": "ref_genome",
      "label": "Reference genome (.fa.gz)",
      "patterns": ["*.fasta.gz", "*.fa.gz"]
    },
    {
      "class": "file",
      "optional": false,
      "name": "annotations",
      "label": "transcript and other annotations (GTF)",
      "patterns": ["*.gtf.gz"]
    },
    {
      "name": "genome",
      "label": "Genome assembly (e.g. GRCh38, hg19, mm10)",
      "class": "string",
      "optional": true,
      "default": ""
    },
    {
      "name": "gender",
      "label": "Gender (e.g. XX, XY)",
      "class": "string",
      "optional": true,
      "default": ""
    },
    {
      "name": "anno",
      "label": "Annotation version (e.g. v24, v19, M4)",
      "class": "string",
      "optional": true,
      "default": ""
    }
  ],
  "outputSpec": [
    {
      "name": "star_index",
      "label": "Reference files indexed for STAR",
      "class": "file",
      "patterns": ["*_sRNA_starIndex.tgz"]
    }
  ],
  "runSpec": {
    "distribution": "Ubuntu",
    "release": "12.04",
    "interpreter": "bash",
    "file": "src/small-rna-prep-star.sh",
    "execDepends": [{ "name": "gawk" }],
    "systemRequirements": {
      "main": {
        "instanceType": "mem3_hdd2_x4"
      },
      "myEntryPoint": {
        "instanceType": "mem3_hdd2_x4"
      }
    }
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "categories": [
    "ENCODE"
  ]
}
