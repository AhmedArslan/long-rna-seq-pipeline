{
  "name": "prep-star",
  "title": "Long-RNA-Seq-prep-star-genome",
  "summary": "Prepare reference genome and transcriptome indexes for STAR used in the ENCODE long-rna-seq pipeline",
  "dxapi": "1.0.0",
  "version": "2.0.0",
  "authorizedUsers": [],
  "inputSpec": [
    {
      "class": "file",
      "optional": false,
      "name": "annotations",
      "label": "transcript and other annotations (GTF)",
      "patterns": ["*.gtf.gz"]
    },
    {
      "class": "file",
      "optional": false,
      "name": "genome",
      "label": "Reference genome (.fa.gz)",
      "patterns": ["*.fasta.gz", "*.fa.gz"]
    },
    {
      "class": "file",
      "optional": true,
      "name": "spike_in",
      "label": "Spike-in RNA sequences (fasta)",
      "patterns": ["*.fasta.gz", "*.fa.gz"]
    }
  ],
  "outputSpec": [
    {
      "class": "file",
      "name": "star_index",
      "label": "Reference files indexed for STAR"
    }
  ],
  "runSpec": {
    "interpreter": "bash",
    "file": "src/prep-star.sh",
    "systemRequirements": {
      "main": {
        "instanceType": "mem3_hdd2_x4"
      },
      "myEntryPoint": {
        "instanceType": "mem3_hdd2_x4"
      }
    }
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "categories": [
    "ENCODE"
  ]
}
