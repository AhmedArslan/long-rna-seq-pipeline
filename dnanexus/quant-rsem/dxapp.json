{
  "name": "quant-rsem",
  "title": "Long-RNA-Seq-quantitate-RSEM",
  "summary": "Do genome and transcription quantitations with RSEM from STAR alignments",
  "dxapi": "1.0.0",
  "version": "1.0.2",
  "authorizedUsers": ["PUBLIC"],
  "inputSpec": [
    {
      "name": "star_anno_bam",
      "label": "BAM file for reads aligned to annotation (transcriptome)",
      "class": "file",
      "optional": false,
      "patterns": ["*.bam"]
    },
    {
      "name": "rsem_index",
      "label": "Genome indexed for RSEM (tar.gz file)",
      "class": "file",
      "optional": false,
      "patterns": ["*.rsemIndex.tgz"]
    },
    {
      "name": "rnd_seed",
      "label": "Random Seed",
      "class": "int",
      "default": 12345,
      "optional": true
    },
    {
      "name": "paired_end",
      "label": "Library was paired ended",
      "class": "boolean",
      "optional": false
    },
    {
      "name": "nthreads",
      "label": "Number of threads to use",
      "class": "int",
      "optional": true,
      "default": 8
    }
  ],
  "outputSpec": [
    {
      "name": "rsem_gene_results",
      "label": "Genomic quantification",
      "class": "file",
      "patterns": ["*_rsem.genes.results"]
    },
    {
      "name": "rsem_iso_results",
      "label": "Transcript quantification",
      "class": "file",
      "patterns": ["*_rsem.isoforms.results"]
    }
  ],
  "runSpec": {
    "interpreter": "bash",
    "file": "src/quant-rsem.sh",
    "systemRequirements": {
      "main": {
        "instanceType": "mem3_hdd2_x8"
      },
      "myEntryPoint": {
        "instanceType": "mem3_hdd2_x8"
      }
    }
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "categories": [
    "ENCODE"
  ]
}
