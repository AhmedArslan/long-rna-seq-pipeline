{
  "name": "rampage-peaks",
  "title": "Rampage-RNA-Seq-peak-calling",
  "summary": "Uses genome BAM marked for Rampage to calls peaks and produce 5' signals",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "authorizedUsers": [],
  "inputSpec": [
    {
      "name": "marked_bam",
      "label": "Input BAM file marked for Rampage",
      "class": "file",
      "optional": false,
      "patterns": ["*.bam"]
    },
    {
      "name": "control_bam",
      "label": "Control BAM file for Rampage",
      "class": "file",
      "optional": false,
      "patterns": ["*.bam"]
    },
    {
      "optional": false,
      "class": "file",
      "name": "gene_annotation",
      "label": "Gene/Transcript annotation file (GTF)",
      "patterns": ["*.gtf.gz"]
    },
    {
      "name": "chrom_sizes",
      "label": "chomosome/name length file",
      "class": "file",
      "optional": false
    },
    {
      "name": "nthreads",
      "label": "Number of threads to use",
      "class": "int",
      "optional": true,
      "default": 8
    }
  ],
  "outputSpec": [
    {
      "name": "rampage_peaks",
      "label": "Bed file of rampage called peaks",
      "class": "file"
    },
    {
      "name": "rampage_peaks_bb",
      "label": "BigBed file of rampage called peaks",
      "class": "file"
    }
  ],
  "runSpec": {
    "interpreter": "bash",
    "file": "src/rampage-peaks.sh",
    "systemRequirements": {
      "main": {
        "instanceType": "mem3_hdd2_x8"
      },
      "myEntryPoint": {
        "instanceType": "mem3_hdd2_x8"
      }
    }
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "categories": [
    "ENCODE"
  ]
}
