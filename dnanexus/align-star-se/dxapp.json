{
  "name": "align-star-se",
  "title": "Long-RNA-Seq-align-star-se",
  "summary": "Align Single-ended reads to genome and transcriptome using STAR for the ENCODE long-rna-seq pipeline",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "categories": [
    "ENCODE"
  ],
  "inputSpec": [
    {
      "name": "reads",
      "label": "Reads to align (fastq.gz)",
      "class": "file",
      "optional": false
    },
    {
      "name": "star_index",
      "label": "Genome indexed for STAR",
      "class": "file",
      "optional": false
    },
    {
      "name": "library_id",
      "label": "Identifier for biosample library",
      "class": "string",
      "optional": false
    }
  ],
  "outputSpec": [
    {
      "name": "genome_bam",
      "label": "BAM file of alignment to whole genome",
      "class": "file"
    },
    {
      "name": "genome_bai",
      "label": "BAM index (bai) of alignment to whole genome",
      "class": "file"
    },
    {
      "name": "annotation_bam",
      "label": "BAM file fo alignment to the annotation (transcriptome)",
      "class": "file"
    },
    {
      "name": "all_bw",
      "label": "BigWig file of all reads",
      "class": "file"
    },
    {
      "name": "unique_bw",
      "label": "BigWig file of uniquely mapped reads",
      "class": "file"
    }
  ],
  "runSpec": {
    "interpreter": "bash",
    "file": "src/align-star-se.sh",
    "systemRequirements": {
      "main": {
        "instanceType": "mem3_hdd2_x8"
      },
      "myEntryPoint": {
        "instanceType": "mem3_hdd2_x8"
      }
    },
    "bundledDepends": [
      {
        "name": "resources.tar.gz",
        "id": {
            "$dnanexus_link": "file-BKfxJ5801BJZBZ4yQZb00F4z"
        }
      }
    ],
    "execDepends": [
      {
        "name": "samtools",
        "version": "0.1.18-1ubuntu2"
      }
    ]
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "authorizedUsers": []
}
